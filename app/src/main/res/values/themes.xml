<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.YTDownloader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.YTDownloader.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.YTDownloader.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.YTDownloader.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.YTDownloader.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.YTDownloader.Button</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.YTDownloader.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.YTDownloader.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.YTDownloader.LargeComponent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.YTDownloader.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.YTDownloader.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.YTDownloader.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.YTDownloader.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.YTDownloader.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.YTDownloader.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.YTDownloader.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.YTDownloader.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>